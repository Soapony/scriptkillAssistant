.title{
    margin:20px;
    font-size:x-large;
    font-weight:bold;
    text-align: center;
}

.flex-warp{
    display:flex;
    flex-direction:row;
    margin:10px;
    padding:10px;
    border-top:3px solid grey;
    border-bottom:3px solid grey;
}

.texts{
    width:30%;
    margin:5px;
    font-weight:bold;
}

.inputt{
    width:30%;
    padding:5px;
    border:1px solid rgb(189, 189, 189);
    border-radius:5px;
}

.btn{
    margin:10px;
    margin-top:20px;
}

.picker{
    display:flex;
    margin:10px;
    line-height:2rem;
    border-bottom:solid 3px grey;
    border-top:solid 3px grey;
    font-size:large;
    padding:5px;
}

.picker >.pickerLabel{
    flex:1%;
    max-width:7rem;
    font-weight:bold;
}

.picker >.pickerInput{
    flex:1%;
    display:inline-block;
    height:2rem;
    line-height:2rem;
}

.end{
    position:fixed;
    display:flex;
    flex-direction: column;
    justify-content: space-around;
    width:100%;
    height:90%;
}

.main{
    width:100%;
    display:flex;
    flex-direction: column;
    align-items: center;
}

.endText{
    margin:10px;
    font-size:x-large;
    font-weight:bold;
    color:black;
}