.title{
    font-size:20pt;
    font-weight:bold;
    margin:20px;
}

.radiogroup{
    width:80%;
    justify-content:center;
    display:flex;
    border:3px solid rgb(170, 170, 170);
    margin:30px;
}

.radioNtext{
    margin:20px;
    border-bottom:4px solid black;
}

.flex-warp{
    display:flex;
    flex-direction:row;
    margin:10px;
    padding:10px;
    border-top:3px solid grey;
    border-bottom:3px solid grey;
}

.inputt{
    width:50%;
    padding:5px;
    border:1px solid rgb(189, 189, 189);
    border-radius:5px;
}

.texts{
    margin-left:10px;
    font-size:17pt;
    margin-right:20px
}

.btn{
    margin-top:20px;
}

.picker{
    width:80%;
    display:flex;
    margin:10px;
    line-height:2rem;
    border-bottom:solid 3px grey;
    border-top:solid 3px grey;
    font-size:large;
    padding:5px;
}

.picker >.pickerLabel{
    flex:1%;
    max-width:5rem;
    font-weight:bold;
}

.picker >.pickerInput{
    flex:1%;
    display:inline-block;
    height:2rem;
    line-height:2rem;
}